{
    {{#composerPackageName}}
    "name": "{{.}}",
    {{/composerPackageName}}
    {{#artifactVersion}}
    "version": "{{.}}",
    {{/artifactVersion}}
    "description": "{{{appDescription}}}",
    "keywords": [
        "openapitools",
        "openapi-generator",
        "openapi",
        "php",
        "sdk",
        "rest",
        "api",
        "csas",
        "Česká Spořitelna",
        "Spořka"
    ],
    "homepage": "{{ infoUrl }}",
    "license": "MIT",
    "authors": [
        {
            "name": "Vítězslav Dvořák",
            "email": "vitezslav.dvorak@spojenet.cz",
            "homepage": "https://spojenet.cz/"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/psr7": "^1.7 || ^2.0",
        "vitexsoftware/ease-core": ">=1.41"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^9.0",
        "friendsofphp/php-cs-fixer": "^3.5"
    },
    "autoload": {
        "psr-4": { 
	    "{{escapedInvokerPackage}}\\" : "{{srcBasePath}}/",
	    "{{escapedInvokerPackage}}\\Accounts\\" : "{{srcBasePath}}/Accounts/",
	    "{{escapedInvokerPackage}}\\Modes\\" : "{{srcBasePath}}/Model/"
	}
    },
    "autoload-dev": {
        "psr-4": { 
	    "{{escapedInvokerPackage}}\\Test\\" : "{{testBasePath}}/",
	    "{{escapedInvokerPackage}}\\Test\\Accounts\\" : "{{testBasePath}}/Accounts/",
	    "{{escapedInvokerPackage}}\\Test\\Model\\" : "{{testBasePath}}/Model/"
    },
    "scripts": {
        "post-update-cmd": [
            "npx openapi-generator-cli generate -i openapi.yml -g php --git-user-id Spoje-NET --git-repo-id php-csas-webapi -c .openapi-generator/config.yaml",
            "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --diff --verbose --allow-risky=yes"
        ]
    }
}
